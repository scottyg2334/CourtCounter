<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:onClick="resetScore"
        android:text="RESET" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.android.courtcounter.MainActivity">
            //Text Views


            <TextView
                android:id="@+id/teamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Team A"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teamA"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                android:id="@+id/sixPointsTeamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teamView"
                android:layout_marginBottom="8dp"
                android:background="#0000ff"
                android:onClick="addSixForTeamA"
                android:text="+6 Points"
                android:textStyle="bold" />

            <Button
                android:id="@+id/threePointsTeamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sixPoints"
                android:layout_marginBottom="8dp"
                android:background="#0000ff"
                android:onClick="addThreeForTeamA"
                android:text="+3 Points"
                android:textStyle="bold" />

            <Button
                android:id="@+id/twoPointsTeamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/threePoints"
                android:layout_marginBottom="8dp"
                android:background="#0000ff"
                android:onClick="addTwoForTeamA"
                android:text="+2 Points"
                android:textStyle="bold" />

            <Button
                android:id="@+id/onePointTeamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/twoPoints"
                android:layout_marginBottom="8dp"
                android:background="#0000ff"
                android:onClick="addOneForTeamA"
                android:text="+1 Point"
                android:textStyle="bold" />


        </LinearLayout>
        // Divider Line Betwen Views.

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"></View>

        </LinearLayout>


        //Team B Layout

        <LinearLayout
            android:id="@+id/teamBView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.android.courtcounter.MainActivity">
            //Text Views

            <TextView
                android:id="@+id/teamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Team B"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teamA"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#000000"
                android:textSize="56sp" />

            <Button
                android:id="@+id/sixPointsTeamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/teamView"
                android:layout_marginBottom="8dp"
                android:background="#ff0000"
                android:onClick="addSixForTeamB"
                android:text="+6 Points"
                android:textStyle="bold" />

            <Button
                android:id="@+id/threePointsTeamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sixPoints"
                android:layout_marginBottom="8dp"
                android:background="#ff0000"
                android:onClick="addThreeForTeamB"
                android:text="+3 Points"
                android:textStyle="bold" />

            <Button
                android:id="@+id/twoPointsTeamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/threePoints"
                android:layout_marginBottom="8dp"
                android:background="#ff0000"
                android:onClick="addOneTwoTeamB"
                android:text="+2 Points"
                android:textStyle="bold" />

            <Button
                android:id="@+id/onePointTeamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/twoPoints"
                android:layout_marginBottom="8dp"
                android:background="#ff0000"
                android:onClick="addOneForTeamB"
                android:text="+1 Point"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
